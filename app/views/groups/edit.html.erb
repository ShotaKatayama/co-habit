<div id = "main">

  <div class="form_section">
    <h1>グループの編集</h1>

    <%= link_to 'グループを削除する', "/groups/#{params[:id]}", method: :delete %>

    <%= form_for @group do |f| %>
      <!-- グループ名の入力 -->
      <h2>グループ名</h2>
      <%= f.text_field :group_name, placeholder: "グループの名前", class: "form-control", value: @group_info[0].group_name %>

      <!-- グループ説明の入力 -->
      <h2>グループの説明</h2>
      <%= f.text_area :group_desc, placeholder: "グループの説明", style: 'width: 80%; height: 300px;', class: "form-control", value: @group_info[0].group_desc %>

      <h2>開始日の設定</h2>
      <%= f.date_field :start_year, placeholder: "開始年", class: "form-control", value: @group_info[0].start_year %>

      <h2>終了日の設定</h2>
      <%= f.date_field :end_year, placeholder: "終了年", class: "form-control", value: @group_info[0].end_year %>

      <!-- 周期の入力 -->
      <h2>確認周期日数の設定</h2>
      <%= f.number_field :check_span, in:1...8, placeholder: "確認周期日数", class: "form-control check_span", value: @group_info[0].check_span %>

      <%= f.hidden_field :check_span_counter, class: "check_span_counter", value: @group_info[0].check_span_counter %>

      <!-- ユーザーの招待 -->
      <!--
      メールの送信で招待を送る
      [ivite_user1]の形でパラメータに含ませたい
      -->

      <%= f.submit "更新", data: { disable_with: "更新中..." }, class: "btn btn-primary withripple form-control" %>
    <% end %>
  </div>
  <script type="text/javascript">
    $(function () {
        $(".check_span").on("keyup change", function () {
            $(".check_span_counter").val($(this).val());
        });
    });
  </script>
</div>