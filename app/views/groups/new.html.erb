<div id = "main">
  <div class="form_section">
    <h1>新規グループの作成</h1>

    <%= form_for @group do |f| %>
      <!-- グループ名の入力 -->
      <h2>グループ名</h2>
      <%= f.text_field :group_name, placeholder: "グループの名前", class: "form-control" %>

      <!-- グループ説明の入力 -->
      <h2>グループの説明</h2>
      <%= f.text_area :group_desc, placeholder: "グループの説明", style: 'width: 80%; height: 300px;', class: "form-control" %>

      <h2>開始日の設定</h2>
      <%= f.date_field :start_year, placeholder: "開始年", class: "form-control" %>

      <h2>終了日の設定</h2>
      <%= f.date_field :end_year, placeholder: "終了年", class: "form-control" %>

      <!-- 周期の入力 -->
      <h2>確認周期日数の設定</h2>
      <%= f.number_field :check_span, in:1...8, placeholder: "確認周期日数", class: "form-control check_span" %>

      <%= f.hidden_field :check_span_counter, class: "check_span_counter" %>

      <!-- ユーザーの招待 -->
      <!--
      メールの送信で招待を送る
      [ivite_user1]の形でパラメータに含ませたい
      -->
      <h2>ユーザーの招待</h2>
      <%= f.email_field :invite_user1, placeholder: "ユーザー1", class: "form-control" %>
      <%= f.email_field :invite_user2, placeholder: "ユーザー2", class: "form-control" %>
      <%= f.email_field :invite_user3, placeholder: "ユーザー3", class: "form-control" %>
      <%= f.email_field :invite_user4, placeholder: "ユーザー4", class: "form-control" %>
      <%= f.email_field :invite_user5, placeholder: "ユーザー5", class: "form-control" %>
      <%= f.email_field :invite_user6, placeholder: "ユーザー6", class: "form-control" %>
      <%= f.email_field :invite_user7, placeholder: "ユーザー7", class: "form-control" %>
      <%= f.email_field :invite_user8, placeholder: "ユーザー8", class: "form-control" %>
      <%= f.email_field :invite_user9, placeholder: "ユーザー9", class: "form-control" %>
      <%= f.email_field :invite_user10, placeholder: "ユーザー10", class: "form-control" %>

      <br>
      <%= f.submit "送信", data: { disable_with: "送信中..." }, class: "btn btn-primary withripple form-control" %>

    <% end %>
  </div>
  <script type="text/javascript">
    $(function () {
        $(".check_span").on("keyup change", function () {
            $(".check_span_counter").val($(this).val());
        });
    });
  </script>

</div>